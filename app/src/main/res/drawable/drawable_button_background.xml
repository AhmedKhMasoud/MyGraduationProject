<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_enabled="true">

        <shape android:shape="rectangle">

            <solid
                android:color="@color/button__enabled_background_color"/>

            <corners
                android:radius="40dp"/>

        </shape>

    </item>

    <item  android:state_enabled="false">

        <shape android:shape="rectangle">

            <solid
                android:color="@color/button__unEnabled_background_color"/>

            <corners
                android:radius="40dp"/>

        </shape>

    </item>


    <item>

        <shape android:shape="rectangle">

            <solid
                android:color="#fff"/>

            <corners
                android:radius="40dp"/>

        </shape>

    </item>

</selector>